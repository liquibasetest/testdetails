from delta import DeltaTable

# Specify the path to the Parquet data
parquet_path = "path/to/parquet/directory"

# Specify the path to the Delta Lake table
delta_path = "path/to/delta/table"

# Load the Parquet data and convert it to a Delta table
delta_table = DeltaTable.convertToDelta(spark, parquet_path, delta_path)

# You can now manage the Delta table using delta_table, e.g., querying, appending data, and more.



from delta import DeltaTable

# Load the Delta Lake table
delta_path = "path/to/delta/table"
delta_table = DeltaTable(spark, delta_path)

# Read the contents into a DataFrame
delta_df = delta_table.toDF()

# Show the first few rows
delta_df.show()
